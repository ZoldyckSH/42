<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/signup.css">
</head>


<body>
   <%- include('../includes/navigation.ejs') %>
   <div class="container">
        <form action="/user/loginfo" method="POST" enctype="multipart/form-data">
            <h2>Change Username :</h2>
            <div class="row">
                <div class="col-25">
                    <label for="username">New Username :</label>
                </div>
                <div class="col-75">
                    <input type="text" name="username" id="username" value="<%= user.username %>">
                </div>
            </div>
            <h2>Change Email :</h2>
            <div class="row">
                <div class="col-25">
                    <label for="email">New email :</label>
                </div>
                <div class="col-75">
                    <input type="text" name="email" id="email" value="<%= user.email %>">
                </div>
            </div>
                <h2>Change Password : </h2>
            <div class="row">
                    <div class="col-25">
                        <label for="oldpassword">Type Old Password :</label>
                    </div>
                    <div class="col-75">
                        <input placeholder= "Your old password" type="password" name="oldpassword" id="oldpassword" value="">
                    </div>
                </div>
                
                <div class="row">
                        <div class="col-25">
                            <label for="newpassword">Type NewPassword :</label>
                        </div>
                        <div class="col-75">
                            <input placeholder= "Your new password" type="password" name="newpassword" id="newpassword" value="">

                            <input placeholder= "Type again new password" type="password" name="newpassword2" id="newpassword2" value="">
                        </div>
                    </div>
                    <input type="submit" value="submit">
        </form>
        <a href='/user/profile'><br /><input type="submit" value="Return"></a>
    </div>
      
      
      
      <%- include('../includes/end.ejs') %>